<div class="container">
	<div class="row">
    <div class="col-md-5">
      <%= form_with model: [:public, @posting] do |f| %>
        <%= image_tag @posting.customer.get_profile_image(50,50), class: "rounded-circle" %>
        <%= @posting.customer.last_name %><%= @posting.customer.first_name %>
        <%= image_tag @posting.get_profile_image(250,250) %>
        <p> <%= @posting.body %></p>
      <% end %>

      <div>
        <p>コメント件数：<%= @posting.post_comments.count %></p>
        <% @posting.post_comments.each do |post_comment| %>
          <%= image_tag post_comment.customer.get_profile_image(100,100) %>
          <%= post_comment.customer.last_name %>
          <p><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></p>
          <% if post_comment.customer == current_customer %>
          <%= link_to "削除", admin_posting_post_comment_path(post_comment.posting, post_comment), method: :delete %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>