<div class="container">
	<div class="row">
	  <div class="offset-md-1 col-md-10 offset-md-1">
      <h2><%= @customers.last_name %><%= @customers.first_name %>さんの会員詳細</h2>

      <%= form_with model: [:admin, @customers] do |f| %>

      <div class="form-group row form-inline ">
      <%= f.label :id, "会員ID", class: "col-md-4" %>
      <span>
        <%= @customers.id %>
      </span>

      </div>
      <div class="form-group row form-inline ">
        <%= f.label :last_name, "氏名", class: "col-md-4" %>
        <span>
        <%= @customers.last_name %><%= @customers.first_name %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :last_name_kana, "フリガナ", class: "col-md-4" %>
        <span>
        <%= @customers.last_name_kana %><%= @customers.first_name_kana %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :telephone_number, "電話番号", class: "col-md-4" %>
        <span>
        <%= @customers.telephone_number %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :introduction, "一言", class: "col-md-4" %>
        <span>
        <%= @customers.introduction %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :email, "メールアドレス", class: "col-md-4" %>
        <span>
        <%= @customers.email %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :is_deleted, "会員ステータス", class: "col-md-4" %>
        <span>
        <% if @customers.is_deleted==true %>
          退会
        <% else %>
          有効
        <% end %>
        </span>
      </div>
      <div class="form-group row form-inline ">
      <%= link_to '編集する', edit_admin_customer_path(@customers), class:"btn btn-sm btn-success" %>
      <%= link_to '投稿一覧', admin_postings_path(@customers), class:"btn btn-sm btn-success" %>
      <% end %>

    </div>
  </div>
</div>