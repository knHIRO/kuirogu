<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


  <div class="form-group row form-inline ">
  <%= f.label :last_name, "名前（性）", class: "col-md-4" %>
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" , class: "col-md-3"%>
  <%= f.label :last_name,"（名）", class: "col-md-2" %>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: "col-md-3" %>
  </div>

  <div class="form-group row form-inline ">
    <%= f.label :last_name_kana, "フリガナ（セイ）", class: "col-md-4" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-md-3" %>
    <%= f.label :first_name_kana, "（メイ）", class: "col-md-2" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-md-3" %>
  </div>

  <div class="form-group row form-inline">
    <%= f.label :メールアドレス, class: "col-md-4" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4" %>
  </div>

   <div class="form-group row form-inline">
     <%= f.label :電話番号（ハイフンなし）,class: "col-md-4"%>
     <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-md-4" %>
   </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <p><div class="actions">
    <%= f.submit "新規登録",  class:"btn-success" %>
  </div></p>
<% end %>

<%= render "public/shared/links" %>
