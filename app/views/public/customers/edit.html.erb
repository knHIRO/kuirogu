<div class="container">
	<div class="row">
	  <div class="col-md-12">

	  <%= form_with model: @customer, url:public_customer_path, method: :patch do |f| %>
	  <div class="form-group row form-inline ">
      <%= f.label :profile_image, "アイコン", class: "col-md-4" %>
      <%= f.file_field :profile_image, class:"form-control-file item_image", placeholder: "プロフィール画像", accept: "image/*", class: "col-md-" %>
      </div>

      <div class="form-group row form-inline ">
       <%= f.label :introduction, "一言", class: "col-md-4" %>
       <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction", class: "col-md-3" %>
       </div>

    <div class="form-group row form-inline ">
      <%= f.label :last_name, "氏名", class: "col-md-4" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-md-3" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-md-3" %>
      </div>

	    <div class="form-group row form-inline ">
      <%= f.label :last_name_kana, "フリガナ", class: "col-md-4" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-md-3" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-md-3" %>
      </div>

      <div class="form-group row form-inline ">
      <%= f.label :telephone_number, "電話番号", class: "col-md-4" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-md-3" %>
      </div>

      <div class="form-group row form-inline ">
      <%= f.label :email, "メールアドレス", class: "col-md-4" %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-md-3" %>
      </div>

      <div class="form-group row form-inline ">

        <%= f.submit '変更内容を保存', class:"btn btn-success" %>
      </div>

      <% end %>

    </div>
  </div>
</div>